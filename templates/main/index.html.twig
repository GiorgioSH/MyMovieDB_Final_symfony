{% extends "base.html.twig"%}

{% block title %} Accueil {% endblock %}

{% block body %} 

<div class="row">
    <div class="az" style="display:flex; flex-wrap:wrap;  justify-content: center;">
            {# {% if actor is defined %}
                <img style="max-width:500px" src="/assets/upload/images/{{ actor.image }}" alt={{actor.name}} />
                <h2> {{ actor.firstName}} {{ actor.lastName}}</h2>
            {% endif %} #}
        {% for movie in movies %}
            <div class="card col" style="width:18rem; flex: auto 0 0">
                <div class="card-body"  style="justify-content: center;">
                    <h5 class="card-title">
                        {{ movie.name }}
                    </h5>
                    {% if movie.image starts with 'http' %}
                        <img style="max-width: 100%" src="{{ movie.image}}" alt={{movie.name}} />
                    {% else %}
                        <img style="max-width:100%; min-height:49%; max-height:49%;" 
                            src="/assets/upload/images/{{ movie.image }}" alt={{movie.name}} />
                        {# <img style="max-width:100%" src="/assets/upload/images/{{ movie.image }}" alt={{movie.name}} /> #}
                    {% endif %}
                    
                    <p class="card-text" style="max-height:50px; 
                                                height:250px;
                                                padding: 0px;
                                                margin: 0px;
                                                white-space:nowrap;
                                                overflow:hidden;
                                                text-overflow:ellipsis;">
                    {{ movie.synopsis | raw }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>  
</div>

{% endblock %}